{
    "version": 2,
    "builds": [
      {
        "src": "api/send-email.js",
        "use": "@vercel/node",
        "config": {
          "maxDuration": 5000,
          "runtime": "nodejs18.x"
        }
      },
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/send-email",
        "dest": "/api/send-email.js"
      },
      {
        "src": "/(.*)",
        "dest": "/public/$1"
      }
    ]
  }